<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.opengeospatial.cite</groupId>
    <artifactId>teamengine</artifactId>
    <version>3.2-SNAPSHOT</version>
  </parent>
  <groupId>org.opengeospatial.cite.teamengine</groupId>
  <artifactId>teamengine-core</artifactId>
  <packaging>jar</packaging>

  <name>TEAM Engine - Core Module</name>
  <description>
  The core module includes the main CTL script processor along with various 
  test utilities.
  </description>
  <url>http://sourceforge.net/projects/teamengine/</url>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>teamengine-resources</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>net.sourceforge.saxon</groupId>
      <artifactId>saxon</artifactId>
      <version>9.0.0.8</version>
    </dependency>
    <dependency>
      <groupId>net.sourceforge.saxon</groupId>
      <artifactId>saxon</artifactId>
      <version>9.0.0.8</version>
      <classifier>s9api</classifier>
    </dependency>
	    <dependency>
      <groupId>net.sourceforge.saxon</groupId>
      <artifactId>saxon</artifactId>
      <version>9.0.0.8</version>
      <classifier>dom</classifier>
    </dependency>
	<dependency>
      <groupId>thaiopensource</groupId>
      <artifactId>jing</artifactId>
      <version>20030619</version>
    </dependency>
	<dependency>
      <groupId>joda-time</groupId>
      <artifactId>joda-time</artifactId>
      <version>1.4</version>
    </dependency>
    <dependency>
      <groupId>xerces</groupId>
      <artifactId>xercesImpl</artifactId>
      <version>2.10.0</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
	  <plugin>
        <artifactId>maven-remote-resources-plugin</artifactId>
        <version>1.3</version>
        <configuration>
          <resourceBundles>
            <resourceBundle>${project.groupId}:teamengine-resources:${project.version}</resourceBundle>
          </resourceBundles>
		  <!-- don't package shared file system resources -->
		  <attached>false</attached>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>process</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.3</version>
        <configuration>
          <descriptor>${basedir}/src/main/assembly/distribution.xml</descriptor>
        </configuration>
		<executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
